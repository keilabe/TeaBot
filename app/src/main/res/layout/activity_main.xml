<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/main_background">


        <LinearLayout
            android:id="@+id/landingIntro"
            android:layout_width="408dp"
            android:layout_height="240dp"
            android:layout_marginBottom="75dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

            <LinearLayout
                android:id="@+id/user"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/profile_settings"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="?attr/colorPrimary"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/main_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:paddingLeft="10dp"
                        app:srcCompat="@drawable/baseline_menu_24" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/wel_name"
                        android:layout_width="200dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/wel"
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:ems="10"
                            android:fontFamily="sans-serif-light"
                            android:inputType="text"
                            android:text="Welcome,"
                            android:textColor="@color/white"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:background="@android:color/transparent"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:ems="10"
                            android:focusable="false"
                            android:fontFamily="sans-serif-black"
                            android:inputType="text"
                            android:text="Sam Joe"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/profileImageButton"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:paddingEnd="10dp"
                        app:srcCompat="@drawable/baseline_account_circle_24" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageAnimation"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/exploredcount"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/imagessearched"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/animationbackground"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/imagecount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="65"
                            android:textAlignment="center"
                            android:textColor="@color/mainColor"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/imagescount"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:inputType="text"
                            android:paddingTop="9dp"
                            android:text="Images"
                            android:textAlignment="center"
                            android:textColor="@color/mainColor"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/searches"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:ems="10"
                            android:inputType="text"
                            android:paddingTop="5dp"
                            android:text="Searches"
                            android:textAlignment="center"
                            android:textColor="@color/mainColor"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:id="@+id/categoryexplored"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/animationbackground"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/catno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textAlignment="center"
                            android:textColor="@color/mainColor"
                            android:textSize="34sp" />

                        <TextView
                            android:id="@+id/cat"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:paddingTop="9dp"
                            android:text="Category"
                            android:textAlignment="center"
                            android:textColor="@color/mainColor"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/explored"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Explored"
                            android:textAlignment="center"
                            android:textColor="@color/mainColor"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/landingMain"
            android:layout_width="wrap_content"
            android:layout_height="480dp"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/landingIntro">


            <LinearLayout
                android:id="@+id/categories"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cat1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-medium"
                    android:inputType="text"
                    android:text="Categories"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/affected"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:text="@string/affected_parts"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/flower"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/flowerimage"
                                android:layout_width="200dp"
                                android:layout_height="80dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/tflower" />

                            <TextView
                                android:id="@+id/flowercat"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:layout_weight="1"
                                android:ems="10"
                                android:inputType="text"
                                android:text="Flower"
                                android:textAlignment="center" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/leaf"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/leaf1"
                                android:layout_width="200dp"
                                android:layout_height="80dp"
                                app:srcCompat="@drawable/leaf1" />

                            <TextView
                                android:id="@+id/leafname"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:ems="10"
                                android:inputType="text"
                                android:text="Leaf"
                                android:textAlignment="center" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/stem"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/stemimage"
                                android:layout_width="200dp"
                                android:layout_height="80dp"
                                app:srcCompat="@drawable/stem1" />

                            <TextView
                                android:id="@+id/stemname"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:ems="10"
                                android:inputType="text"
                                android:text="Stem"
                                android:textAlignment="center" />
                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/recentsearches"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/recent"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:inputType="text"
                    android:text="@string/recent_searches"
                    android:textColor="@color/black"
                    android:textSize="16sp" />




                <HorizontalScrollView
                    android:id="@+id/recentscroll"
                    android:layout_width="match_parent"
                    android:layout_height="200dp">



                    <LinearLayout
                        android:id="@+id/recentlinear"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/view2"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/recent2"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:layout_marginBottom="30dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/algal" />

                            <TextView
                                android:id="@+id/cardname1"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_marginTop="140dp"
                                android:ems="10"
                                android:inputType="text"
                                android:text="Algal"
                                android:textColor="#F44336"
                                android:textStyle="italic" />

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/view3"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/recent3"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/anthracnose1" />

                            <TextView
                                android:id="@+id/cardname2"
                                android:layout_width="wrap_content"
                                android:layout_height="48dp"
                                android:layout_marginTop="140dp"
                                android:ems="10"
                                android:inputType="text"
                                android:text="@string/aranthracnose"
                                android:textColor="#F44336"
                                android:textStyle="italic" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/view4"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/recent4"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/blackspot" />

                            <TextView
                                android:id="@+id/editTextText4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="140dp"
                                android:ems="10"
                                android:inputType="text"
                                android:text="@string/blackspot"
                                android:textColor="#F44336"
                                android:textStyle="italic" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/view5"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/recent5"
                                android:layout_width="180dp"
                                android:layout_height="180dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/greyblight" />

                            <TextView
                                android:id="@+id/editTextText5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="140dp"
                                android:ems="10"
                                android:inputType="text"
                                android:text="@string/blight"
                                android:textColor="#F44336"
                                android:textStyle="italic" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/view1"
                            android:layout_width="180dp"
                            android:layout_height="180dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="200dp"
                                android:layout_height="180dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/rust" />

                            <TextView
                                android:id="@+id/editTextText6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="140dp"
                                android:ems="10"
                                android:inputType="text"
                                android:text="@string/rust"
                                android:textColor="#F44336"
                                android:textStyle="italic" />
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>
                </HorizontalScrollView>


            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_message"
            android:contentDescription="@string/open_camera" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu" />


</androidx.drawerlayout.widget.DrawerLayout>
